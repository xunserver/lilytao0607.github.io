---
/**
 * MovementsPage - 共享的太极招式页面组件
 * @param locale - 语言代码 ('nl' | 'en' | 'de' | 'pl' | 'fr' | 'zh')
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations } from '../../lib/i18n';
import { localizedPath } from '../../lib/paths';

interface Props {
  locale: 'nl' | 'en' | 'de' | 'pl' | 'fr' | 'zh';
}

const { locale } = Astro.props;
const currentLocale = locale;
const t = getTranslations('movements', currentLocale);
const gt = getTranslations('global', currentLocale);
---

<BaseLayout page="movements" locale={currentLocale}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-paper via-mist/30 to-paper"></div>
      <div class="absolute top-20 left-20 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-cyan/5 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="animate-fade-in">
        <span class="inline-block px-4 py-2 text-sm font-medium text-accent bg-accent/10 rounded-full mb-6">
          {t.hero.tag}
        </span>
        <h1 class="text-5xl md:text-6xl font-serif font-bold text-ink mb-6">
          {t.hero.title}
        </h1>
        <p class="text-xl text-secondary max-w-3xl mx-auto">
          {t.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Movement Categories -->
  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-cyan bg-cyan/10 rounded-full mb-4">
          {t.categories.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.categories.title}
        </h2>
        <div class="w-32 h-1 bg-accent/50 mx-auto mb-6"></div>
        <p class="text-lg text-secondary max-w-2xl mx-auto">
          {t.categories.subtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {t.categories.items.map((item, index) => (
          <div class="scroll-animate group h-full flex flex-col" style={`animation-delay: ${index * 0.1}s`}>
            <div class={`bg-paper rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-border/30 hover:border-${item.color}/50 flex-1 flex flex-col`}>
              <div class={`w-20 h-20 bg-gradient-to-br from-${item.color}/20 to-${item.color}/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}>
                <span class="text-4xl">{item.emoji}</span>
              </div>
              <h3 class="text-3xl font-serif font-bold text-ink mb-4">
                {item.title}
              </h3>
              <p class="text-secondary leading-relaxed flex-1">
                {item.desc}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Classic Movements Showcase -->
  <section class="py-24 bg-mist/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-accent bg-accent/10 rounded-full mb-4">
          {t.classicMoves.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.classicMoves.title}
        </h2>
        <div class="w-32 h-1 bg-accent/50 mx-auto mb-6"></div>
        <p class="text-lg text-secondary max-w-2xl mx-auto">
          {t.classicMoves.subtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {t.classicMoves.items.map((move, index) => (
          <div class="scroll-animate h-full flex flex-col" style={`animation-delay: ${index * 0.05}s`}>
            <div class={`bg-paper rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-border/30 hover:border-${move.color}/50 flex-1 flex flex-col`}>
              <!-- Order Badge -->
              <div class="mb-4">
                <span class={`inline-block px-3 py-1 text-xs font-medium text-${move.color} bg-${move.color}/10 rounded-full`}>
                  {move.order}
                </span>
              </div>

              <!-- Movement Name -->
              <h3 class="text-2xl font-serif font-bold text-ink mb-2">
                {move.name}
              </h3>
              <p class={`text-sm text-${move.color} font-medium mb-4`}>
                {move.pinyin}
              </p>

              <!-- Description -->
              <p class="text-secondary text-sm leading-relaxed mb-6 flex-1">
                {move.desc}
              </p>

              <!-- Keyword & Difficulty -->
              <div class="mt-auto pt-4 border-t border-border/20">
                <div class="flex items-center justify-between mb-2">
                  <span class={`inline-block px-2 py-1 text-xs font-medium text-${move.color} bg-${move.color}/10 rounded`}>
                    {move.keyword}
                  </span>
                  <div class="flex items-center space-x-0.5">
                    {Array.from({ length: 5 }).map((_, i) => (
                      <svg
                        class={`w-4 h-4 ${i < move.difficulty ? 'text-accent' : 'text-border/30'}`}
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Practice Points -->
  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-accent bg-accent/10 rounded-full mb-4">
          {t.practice.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.practice.title}
        </h2>
        <div class="w-32 h-1 bg-cyan/50 mx-auto mb-6"></div>
        <p class="text-lg text-secondary max-w-2xl mx-auto">
          {t.practice.subtitle}
        </p>
      </div>

      <!-- Practice Points Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        {t.practice.items.map((item, index) => (
          <div class="scroll-animate h-full flex flex-col" style={`animation-delay: ${index * 0.08}s`}>
            <div class={`bg-paper rounded-2xl shadow-lg hover:shadow-xl p-6 border border-border/30 hover:border-${item.color}/50 transition-all duration-300 h-full flex flex-col`}>
              <!-- Number Badge -->
              <div class="mb-4">
                <div class={`w-12 h-12 bg-${item.color}/10 rounded-full flex items-center justify-center`}>
                  <span class={`text-xl font-serif text-${item.color} font-bold`}>{item.num}</span>
                </div>
              </div>

              <!-- Title -->
              <h3 class="text-xl font-serif font-bold text-ink mb-3">
                {item.title}
              </h3>

              <!-- Description -->
              <p class="text-secondary leading-relaxed text-sm flex-1">
                {item.desc}
              </p>

              <!-- Color Accent Line -->
              <div class={`mt-4 pt-4 border-t border-${item.color}/20`}>
                <div class={`w-12 h-0.5 bg-${item.color}/50`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- FAQ Section -->
      <div class="scroll-animate" style="animation-delay: 0.3s">
        <div class="bg-paper rounded-2xl shadow-xl p-8 border border-border/30">
          <div class="mb-8">
            <h3 class="text-3xl font-serif font-bold text-ink mb-4">
              {t.faq.title}
            </h3>
            <div class="w-16 h-1 bg-accent/50"></div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {t.faq.questions.map((q, index) => (
              <div class="border-b border-border/30 pb-6 last:border-0">
                <div class="flex items-start space-x-3 mb-3">
                  <span class="text-accent text-xl flex-shrink-0">❓</span>
                  <h4 class="text-lg font-serif font-bold text-ink">
                    {q.question}
                  </h4>
                </div>
                <p class="text-secondary leading-relaxed text-sm mb-4 pl-8">
                  {q.answer}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-animate">
      <h2 class="text-4xl font-serif font-bold text-ink mb-6">
        {t.cta.title}
      </h2>
      <p class="text-xl text-secondary mb-12">
        {t.cta.subtitle}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
        <a
          href={localizedPath('/courses', currentLocale)}
          class="px-8 py-4 bg-accent hover:bg-primary text-paper hover:text-paper border-2 border-accent hover:border-primary rounded-lg font-medium text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
        >
          {t.cta.coursesButton}
        </a>
        <a
          href={localizedPath('/about', currentLocale)}
          class="px-8 py-4 border-2 border-accent/30 text-accent hover:bg-accent/10 rounded-lg font-medium text-lg transition-all duration-300 hover:scale-105"
        >
          {t.cta.aboutButton}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.addEventListener('astro:page-load', () => {
    const animatedElements = document.querySelectorAll('.scroll-animate');
    animatedElements.forEach((el) => observer.observe(el));
  });

  const animatedElements = document.querySelectorAll('.scroll-animate');
  animatedElements.forEach((el) => observer.observe(el));
</script>

<style>
  .scroll-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .scroll-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
</style>
