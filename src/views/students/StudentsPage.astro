---
/**
 * StudentsPage - 共享的学员风采页面组件
 * @param locale - 语言代码 ('nl' | 'en' | 'zh')
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations } from '../../lib/i18n';
import { localizedPath } from '../../lib/paths';

interface Props {
  locale: 'nl' | 'en' | 'zh';
}

const { locale } = Astro.props;
const currentLocale = locale;
const t = getTranslations('students', currentLocale);
const gt = getTranslations('global', currentLocale);
---

<BaseLayout page="students" locale={currentLocale}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-paper via-mist/30 to-paper"></div>
      <div class="absolute top-20 left-20 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-cyan/5 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="animate-fade-in">
        <span class="inline-block px-4 py-2 text-sm font-medium text-accent bg-accent/10 rounded-full mb-6">
          {t.hero.tag}
        </span>
        <h1 class="text-5xl md:text-6xl font-serif font-bold text-ink mb-6">
          {t.hero.title}
        </h1>
        <p class="text-xl text-secondary max-w-3xl mx-auto">
          {t.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Student Testimonials -->
  <section class="py-24 bg-mist/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-accent bg-accent/10 rounded-full mb-4">
          {t.testimonials.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.testimonials.title}
        </h2>
        <div class="w-32 h-1 bg-accent/50 mx-auto mb-6"></div>
        <p class="text-lg text-secondary max-w-2xl mx-auto">
          {t.testimonials.subtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {t.testimonials.items.map((item, index) => (
          <div
            class:list={[
              'scroll-animate',
              item.featured && 'md:col-span-2 lg:col-span-3',
            ]}
            style={`animation-delay: ${index * 0.05}s`}
          >
            <div
              class:list={[
                'rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border h-full flex flex-col',
                item.featured
                  ? 'bg-gradient-to-br from-paper to-accent/5 p-8 border-accent/30'
                  : 'bg-paper p-6 border-border/30',
              ]}
            >
              <!-- Rating Stars -->
              <div class="flex items-center justify-between mb-4 gap-4">
                <div class="flex items-center space-x-0.5">
                  {Array.from({ length: item.rating ?? 5 }).map((_, i) => (
                    <svg
                      class="w-5 h-5 text-accent"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                {item.featured && (
                  <span class="px-3 py-1 text-xs font-semibold tracking-wide text-accent bg-accent/10 rounded-full">
                    {currentLocale === 'zh'
                      ? '重点分享'
                      : currentLocale === 'en'
                        ? 'Featured Story'
                        : 'Uitgelichte Ervaring'}
                  </span>
                )}
              </div>

              <!-- Quote -->
              <p class:list={['text-secondary leading-relaxed mb-4 flex-1', item.featured && 'text-base md:text-lg']}>
                "{item.text}"
              </p>

              <!-- Author Info -->
              <div class="pt-4 border-t border-border/20">
                <p class:list={['text-ink font-semibold', item.featured && 'text-lg']}>{item.name}</p>
                <p class="text-sm text-secondary">{item.course}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Student Statistics -->
  <section class="py-24 bg-mist/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-cyan bg-cyan/10 rounded-full mb-4">
          {t.stats.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.stats.title}
        </h2>
        <div class="w-32 h-1 bg-accent/50 mx-auto mb-6"></div>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {t.stats.items.map((stat, index) => (
          <div class="scroll-animate h-full flex flex-col" style={`animation-delay: ${index * 0.1}s`}>
            <div class={`bg-paper rounded-2xl shadow-lg p-8 border border-border/30 hover:border-${stat.color}/50 transition-all duration-300 flex-1 flex flex-col`}>
              <p class={`text-5xl md:text-6xl font-serif font-bold text-${stat.color} mb-4`}>{stat.value}</p>
              <p class="text-lg text-secondary flex-1">{stat.label}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Learning Outcomes -->
  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="scroll-animate order-2 lg:order-1">
          <div class="relative">
            <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl">
              <img
                src="/image/tai-chi-nature.jpg"
                alt="Tai Chi Practice"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -bottom-6 -right-6 bg-paper border-2 border-accent/30 rounded-xl p-6 shadow-lg max-w-xs">
              <p class="text-3xl font-serif text-accent font-bold mb-2">{t.outcomes.badge.title}</p>
              <p class="text-sm text-secondary">{t.outcomes.badge.subtitle}</p>
            </div>
          </div>
        </div>

        <div class="scroll-animate order-1 lg:order-2">
          <div class="mb-8">
            <span class="inline-block px-3 py-1 text-sm font-medium text-accent bg-accent/10 rounded-full mb-4">
              {t.outcomes.tag}
            </span>
            <h2 class="text-4xl font-serif font-bold text-ink mb-6">
              {t.outcomes.title}
            </h2>
            <div class="w-20 h-1 bg-accent/50 mb-8"></div>
          </div>

          <div class="space-y-6">
            {t.outcomes.items.map((item, index) => (
              <div class="flex items-start space-x-4">
                <div class={`w-12 h-12 bg-${item.color}/10 rounded-full flex items-center justify-center flex-shrink-0`}>
                  <span class={`text-xl text-${item.color}`}>{item.emoji}</span>
                </div>
                <div>
                  <h3 class="text-xl font-serif font-bold text-ink mb-2">
                    {item.title}
                  </h3>
                  <p class="text-secondary">
                    {item.desc}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-animate">
      <h2 class="text-4xl font-serif font-bold text-ink mb-6">
        {t.cta.title}
      </h2>
      <p class="text-xl text-secondary mb-12">
        {t.cta.subtitle}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
        <a
          href={localizedPath('/courses', currentLocale)}
          class="px-8 py-4 bg-accent hover:bg-primary text-paper hover:text-paper border-2 border-accent hover:border-primary rounded-lg font-medium text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
        >
          {t.cta.registerButton}
        </a>
        <a
          href={localizedPath('/movements', currentLocale)}
          class="px-8 py-4 border-2 border-accent/30 text-accent hover:bg-accent/10 rounded-lg font-medium text-lg transition-all duration-300 hover:scale-105"
        >
          {t.cta.movementsButton}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.addEventListener('astro:page-load', () => {
    const animatedElements = document.querySelectorAll('.scroll-animate');
    animatedElements.forEach((el) => observer.observe(el));
  });

  const animatedElements = document.querySelectorAll('.scroll-animate');
  animatedElements.forEach((el) => observer.observe(el));
</script>

<style>
  .scroll-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .scroll-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
</style>
