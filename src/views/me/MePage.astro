---
/**
 * MePage - ÂÖ±‰∫´ÁöÑÂÖ≥‰∫éÊàëÈ°µÈù¢ÁªÑ‰ª∂
 * @param locale - ËØ≠Ë®Ä‰ª£Á†Å ('nl' | 'en' | 'zh')
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations } from '../../lib/i18n';
import { localizedPath } from '../../lib/paths';

interface Props {
  locale: 'nl' | 'en' | 'zh';
}

const { locale } = Astro.props;
const currentLocale = locale;
const t = getTranslations('me', currentLocale);
const gt = getTranslations('global', currentLocale);
---

<BaseLayout page="me" locale={currentLocale}>
  <!-- Hero Section -->
  <section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-mist/50 via-paper to-mist/30"></div>
      <div class="absolute top-20 right-20 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-cyan/5 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="animate-fade-in">
        <span class="inline-block px-4 py-2 text-sm font-medium text-accent bg-accent/10 rounded-full mb-6">
          {t.hero.tag}
        </span>
        <h1 class="text-5xl md:text-6xl font-serif font-bold text-ink mb-6">
          {t.hero.name}
        </h1>
        <p class="text-2xl text-secondary max-w-3xl mx-auto mb-4">
          {t.hero.title}
        </p>
        <p class="text-lg text-secondary/80 max-w-2xl mx-auto">
          {t.hero.credentials}
        </p>
      </div>
    </div>
  </section>

  <!-- Master-Disciple Relationship -->
  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="scroll-animate">
          <div class="relative">
            <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl bg-mist/30">
              <img
                src="/image/tai-chi-taoli.jpg"
                alt={t.hero.name}
                class="w-full h-full object-contain"
              />
            </div>
            <div class="absolute bottom-4 right-4 bg-paper border-2 border-accent/30 rounded-xl p-4 shadow-lg">
              <p class="text-3xl font-serif text-accent font-bold">{t.hero.badge.years}</p>
              <p class="text-xs text-secondary">{t.hero.badge.text}</p>
            </div>
          </div>
        </div>

        <div class="scroll-animate" style="animation-delay: 0.2s">
          <div class="mb-8">
            <span class="inline-block px-3 py-1 text-sm font-medium text-cyan bg-cyan/10 rounded-full mb-4">
              {t.lineage.tag}
            </span>
            <h2 class="text-4xl font-serif font-bold text-ink mb-6">
              {t.lineage.title}
            </h2>
            <div class="w-20 h-1 bg-accent/50 mb-8"></div>
          </div>

          <div class="space-y-6 text-secondary text-lg">
            <p class="leading-relaxed" set:html={t.lineage.p1} />
            <p class="leading-relaxed" set:html={t.lineage.p2} />
            <p class="leading-relaxed" set:html={t.lineage.p3} />
          </div>

          <div class="flex flex-wrap gap-3 mt-8">
            {t.lineage.tags.map((tag) => (
              <span class="px-4 py-2 bg-mist border border-border rounded-lg text-sm text-ink">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Philosophy -->
  <section class="py-24 bg-mist/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-accent bg-accent/10 rounded-full mb-4">
          {t.philosophy.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.philosophy.title}
        </h2>
        <div class="w-32 h-1 bg-accent/50 mx-auto mb-6"></div>
        <p class="text-lg text-secondary max-w-3xl mx-auto">
          {t.philosophy.subtitle}
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-paper rounded-2xl shadow-xl p-8 md:p-12 border-2 border-accent/30 scroll-animate">
          <div class="flex items-start space-x-4 mb-6">
            <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-2xl">üß®</span>
            </div>
            <div>
              <h3 class="text-2xl font-serif font-bold text-ink mb-4">
                {t.philosophy.quoteLabel}
              </h3>
            </div>
          </div>

          <blockquote class="text-2xl md:text-3xl font-serif text-accent leading-relaxed mb-8 border-l-4 border-accent/30 pl-6">
            "{t.philosophy.quote}"
          </blockquote>

          <p class="text-lg text-secondary leading-relaxed" set:html={t.philosophy.description} />
        </div>
      </div>
    </div>
  </section>

  <!-- Basic Skills System -->
  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <span class="inline-block px-3 py-1 text-sm font-medium text-cyan bg-cyan/10 rounded-full mb-4">
          {t.skills.tag}
        </span>
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.skills.title}
        </h2>
        <div class="w-32 h-1 bg-cyan/50 mx-auto mb-6"></div>
        <p class="text-lg text-secondary max-w-2xl mx-auto">
          {t.skills.subtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {t.skills.items.map((item, index) => (
          <div class="scroll-animate h-full flex flex-col" style={`animation-delay: ${index * 0.1}s`}>
            <div class={`bg-paper rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-border/30 flex-1 flex flex-col ${item.color === 'accent' ? 'hover:border-accent/50' : item.color === 'cyan' ? 'hover:border-cyan/50' : item.color === 'secondary' ? 'hover:border-secondary/50' : 'hover:border-accent/50'}`}>
              <div class={`w-16 h-16 rounded-full flex items-center justify-center mb-6 ${item.color === 'accent' ? 'bg-accent/10' : item.color === 'cyan' ? 'bg-cyan/10' : item.color === 'secondary' ? 'bg-secondary/10' : 'bg-accent/10'}`}>
                <span class={`text-2xl font-serif font-bold ${item.color === 'accent' ? 'text-accent' : item.color === 'cyan' ? 'text-cyan' : item.color === 'secondary' ? 'text-secondary' : 'text-accent'}`}>{item.num}</span>
              </div>
              <h3 class="text-2xl font-serif font-bold text-ink mb-4">
                {item.title}
              </h3>
              <p class="text-secondary mb-4 flex-1">{item.desc}</p>
              <p class="text-sm text-secondary/80 mt-auto">
                {item.detail}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Basic Skills -->
  <section class="py-24 bg-mist/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 scroll-animate">
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-ink mb-6">
          {t.whyMatter.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {t.whyMatter.items.map((item, index) => (
          <div class="scroll-animate h-full flex flex-col" style={`animation-delay: ${index * 0.1}s`}>
            <div class="bg-paper rounded-xl p-6 border border-border/30 flex-1 flex flex-col">
              <div class="flex items-start space-x-3 flex-1">
                <span class={`${item.color === 'accent' ? 'text-accent' : item.color === 'cyan' ? 'text-cyan' : item.color === 'secondary' ? 'text-secondary' : 'text-accent'} text-xl flex-shrink-0`}>‚úî</span>
                <p class="text-secondary flex-1">{item.text}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Conclusion -->
  <section class="py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-animate">
      <h2 class="text-4xl font-serif font-bold text-ink mb-6">
        {t.conclusion.title}
      </h2>
      <div class="bg-paper rounded-2xl shadow-xl p-8 md:p-12 border-2 border-accent/30">
        <p class="text-xl text-secondary leading-relaxed mb-6">
          {t.conclusion.p1}
        </p>
        <p class="text-2xl font-serif text-accent leading-relaxed" set:html={t.conclusion.p2} />
        <div class="flex justify-center mt-8">
          <div class="w-24 h-24 bg-mist/50 rounded-full p-3">
            <img
              src="/image/taichi-logo.png"
              alt="Tai Chi"
              class="w-full h-full object-contain animate-[spin_30s_linear_infinite]"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-mist/20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-animate">
      <h2 class="text-4xl font-serif font-bold text-ink mb-6">
        {t.cta.title}
      </h2>
      <p class="text-xl text-secondary mb-12">
        {t.cta.subtitle}
      </p>
      <a
        href={localizedPath('/courses', currentLocale)}
        class="inline-block px-8 py-4 bg-accent hover:bg-primary text-paper rounded-lg font-medium text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
      >
        {t.cta.button}
      </a>
    </div>
  </section>
</BaseLayout>

<script>
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  function observeAnimations() {
    const animatedElements = document.querySelectorAll('.scroll-animate');
    animatedElements.forEach((el) => observer.observe(el));
  }

  // È¶ñÊ¨°Âä†ËΩΩÊó∂Á´ãÂç≥ÊâßË°å
  observeAnimations();

  // ÂÆ¢Êà∑Á´ØÂØºËà™Êó∂ÈáçÊñ∞ÊâßË°å
  document.addEventListener('astro:page-load', observeAnimations);
</script>

<style>
  .scroll-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .scroll-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
</style>
